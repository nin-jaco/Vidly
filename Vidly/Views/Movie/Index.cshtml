@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<br />
@if (Model.Any())
{
    <table>
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <tr>
                        <td>@Html.ActionLink(item.Name, "Details", "Movie", new { id = item.Id }, null)</td>
                        <td>@item.Genre.Name</td>
                    </tr>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>We don't have any movies yet.</p>
}

