@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<br />
@Html.ActionLink("NEW MOVIE", "MovieForm", "Movie", new { id = 0 },new { @class = "btn btn-primary" })
@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "MovieForm", "Movie", new { id = item.Id }, null)</td>
                    <td>@item.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>We don't have any movies yet.</p>
}

